{
  "compileOnSave": true,
  "compilerOptions": {
    "alwaysStrict": true,
    //"noImplicitAny": true,
    "noEmitOnError": true,
    "removeComments": false,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "target": "es6",
    //"watch": true,
    "moduleResolution": "node",
    "typeRoots": [
      "./typings/custom",
      "./typings/globals",
      "./typings/@types",
      "./wwwroot/src/models",
      "./node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "*",
        "typings/modules/*",
        "node_modules/@types/*"
      ]
    },
    "traceResolution": true
  },
  "include": [
    "wwwroot/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "wwwroot/lib"
  ]
}
